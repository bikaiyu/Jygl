<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/imageView_fragment_detail"
        android:src="@mipmap/listitem_icon_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Large Text"
        android:id="@+id/textView_detail_title"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_fragment_detail"
        android:layout_toEndOf="@+id/imageView_fragment_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp"
        android:text="Medium Text"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/textView_detail_des"
        android:layout_below="@+id/textView_detail_title"
        android:layout_toRightOf="@+id/imageView_fragment_detail"
        android:layout_toEndOf="@+id/imageView_fragment_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="12dp"
        android:id="@+id/textView_detail_adddate"
        android:layout_alignBottom="@+id/imageView_fragment_detail"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/riqi"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/imageView_fragment_detail"
        android:layout_toRightOf="@+id/imageView_fragment_detail"
        android:layout_toEndOf="@+id/imageView_fragment_detail" />

</RelativeLayout>
